LOCAL:(LOCAL:10 + 101) = LOCAL:2

;입력済み손数を加算
LOCAL:10++

;ヒントの解析
;比較用変数초기설정(とりうる最小の値)
FOR LCOUNT, 0, ARG:0 + 1
	LOCAL:(LCOUNT + 30) = LCOUNT
NEXT
VARSET LOCAL, 0, 200, 200 + ARG:1 * 10 + ARG:0

$HINT_LOOP
;とりうる모든回答で、입력済み데이터全てについて、矛盾を検索
;矛盾フラグ
LOCAL:4 = 0
FOR LCOUNT, 0, LOCAL:10
	;LOCAL:2 = ヒット数
	;LOCAL:3 = ブロー数
	LOCAL:2 = 0
	LOCAL:3 = 0

	;比較用変数が正解だった場合と、過去の입력済み데이터を照らし合わせ
	FOR LOCAL, 0, ARG:0
		FOR LOCAL:1, 0, ARG:0
			IF LOCAL:(LCOUNT * 10 + LOCAL + 111) == LOCAL:(LOCAL:1 + 31)
				IF LOCAL == LOCAL:1
					LOCAL:2++
					BREAK
				ELSE
					LOCAL:3++
					BREAK
				ENDIF
			ENDIF
		NEXT
	NEXT
	IF LOCAL:(91 + LCOUNT) != LOCAL:2 || LOCAL:(101 + LCOUNT) != LOCAL:3
		;過去のHB데이터と矛盾あり
		LOCAL:4 = 1
		BREAK
	ENDIF
NEXT

IF LOCAL:4 == 0
	;矛盾がないケースを1件加算
	LOCAL:200++
	;LOCAL:211～299に、各桁に該当する数字が何件あったかを記録
	;LOCAL:211　1桁눈に1があった件数
	;LOCAL:212　2桁눈に1があった件数
	;LOCAL:221　1桁눈に2があった件数…
	FOR LCOUNT, 0, ARG:0
		LOCAL:((LOCAL:(31 + LCOUNT) * 10) + LCOUNT + 191)++
	NEXT
ENDIF

;次のケース
FOR LOCAL, ARG:0, 0, -1
	;桁上がり체크
	IF LOCAL:(30 + LOCAL) >= ARG:1
		LOCAL:(30 + LOCAL) = 0
		;最上位の桁が溢れたら종료
		SIF LOCAL == 1
			LOCAL:30 = 1
	ELSE
		LOCAL:(30 + LOCAL)++
		;上位の桁と重複していないか체크
		LOCAL:9 = 0
		FOR LOCAL:1, LOCAL - 1, 0, -1
			IF LOCAL:(30 + LOCAL) == LOCAL:(30 + LOCAL:1)
				;重複してたフラグ
				LOCAL:9++
				BREAK
			ENDIF
		NEXT
		IF LOCAL:9
			;重複してたので、同じ桁でもう1回加算
			LOCAL++
		ELSEIF LOCAL == ARG:0
			;最下位の桁まで重複してなかったので、종료
			BREAK
		ELSE
			;重複してなかったので、下位の桁に戻る
			LOCAL += 2
		ENDIF
	ENDIF
NEXT

