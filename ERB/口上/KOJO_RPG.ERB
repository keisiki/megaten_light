;ARG 공격者
;ARG:1 被공격者
;ARG:2 ダメージ量
;ARG:3 1の時、受け渡し用にLOCALを立てる,2の時はミスしたというフラグになる。-1は반사発生
SIF FLAG:RPG구상
	RETURN 0
;とりあえず、範囲は仕様で悩むので封印しておく
;特殊な스킬で変わったたーげっとが投げ込まれた場合に対処
IF ARG:3
	IF CFLAG:ARG:ターゲット > 16
		LOCAL = 0
		LOCAL:1 = 0
		LOCAL:2 = 0
		LOCAL:3 = 0
		RETURN 0
	ELSE
		;링케이지참가の場合はフラグ更新しない
		SIF CFLAG:ARG:링케이지참가
			RETURN 0
		LOCAL = ARG
		LOCAL:1 = ARG:1
		LOCAL:2 = ARG:2
		;반사はSKILL_TEMP時点で-1をいれて、それからDAMAGE関数で3をいれる
		IF LOCAL:3 == -1
			LOCAL:3 = 3
		ELSE
			LOCAL:3 = ARG:3
		ENDIF
	ENDIF
	RETURN 0
ENDIF
;이상な数値が来てしまうのを회피
IF LOCAL >= CHARANUM || LOCAL:1 >= CHARANUM || LOCAL == 0
	LOCAL = 0
	LOCAL:1 = 0
	LOCAL:2 = 0
	LOCAL:3 = 0
	RETURN 0
ENDIF

;공격側메시지
;적아군전체공격
IF CFLAG:LOCAL:ターゲット == 23
	TFLAG:전투이벤트 = 19
ELSE
	;ミス
	IF LOCAL:3 == 2
		TFLAG:전투이벤트 = 17
	;반사
	ELSEIF LOCAL:3 == 3
		TFLAG:전투이벤트 = 15
	;範囲
	ELSEIF CFLAG:LOCAL:ターゲット > 16
		TFLAG:전투이벤트 = 13
	;1체
	ELSE
		TFLAG:전투이벤트 = 11
	ENDIF
	SIF CFLAG:LOCAL:PTフラグ == CFLAG:(LOCAL:1):PTフラグ
		TFLAG:전투이벤트 += 10
ENDIF
