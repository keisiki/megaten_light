;===================================
;個別コマンド입력
;===================================
@INPUT_COMMAND
#LOCALSIZE 300
#DIMS TARGETS
;대상변경できるかどうか
#DIM TARGET_ABLE, 7
#DIM LINE
#DIM LCOUNT

;---- EDIT 023 ADD START ---------------------------
;処理する前に、抜ける？
SIF FLAG:勝利フラグ && !FLAG:RESULTスキップ
	RETURN 0
;---- EDIT 023 ADD END ---------------------------
;パーティメンバーの行動内容표시
CALL SHOW_NOW_FORMATION_E,0,2, -1
DRAWLINE
CALL SHOW_NOW_FORMATION_P,0,2, 1
PRINTL
CUSTOMDRAWLINE =
PRINTL 행동을 변경할 캐릭터를 선택해주세요(0으로 전투개시、9로 전의 화면으로 돌아갑니다)
CUSTOMDRAWLINE =
VARSET TARGET_ABLE
;대상
FOR LOCAL,1,7
	TARGETS = 
	LOCALS = 포지션{LOCAL}
	;1체스킬＆列스킬でボタンを作成するように
	IF FLAG:LOCALS > -1
		CALL INPUTABLE_CHARA, FLAG:LOCALS
		SIF RESULT == 0
			SETCOLOR COLOR("gray")
		PRINTFORM [{LOCAL}] %CALLNAME:(FLAG:LOCALS),20,LEFT%
		$YARINAOSI
		CALL INPUTABLE_CHARA, FLAG:LOCALS
		;このタイミングでもう元々の입력行動を拾ってしまう
		LOCAL:(10+LOCAL) = CFLAG:(FLAG:LOCALS):입력行動
		;PRINTFORMW LOCAL:{(10+LOCAL)} = {CFLAG:(FLAG:LOCALS):입력行動}
		IF RESULT == 1 && CFLAG:(FLAG:LOCALS):링케이지참가
			PRINTBUTTON "ＷＡＩＴ          ", LOCAL
			SIF GETBIT(FLAG:カスタムゲーム화면,1)
				PRINTFORM %" ",21%
		ELSEIF (RESULT == 1 && CFLAG:(FLAG:LOCALS):ＣＨＡＮＧＥ대상フラグ == 1) || CFLAG:(FLAG:LOCALS):방어フラグ == 1
			PRINTBUTTON "ＧＵＡＲＤ        ", LOCAL
			SIF GETBIT(FLAG:カスタムゲーム화면,1)
				PRINTFORM %" ",21%
		ELSEIF RESULT == 0
			PRINTFORM %GET_STATE(CFLAG:(FLAG:LOCALS):ステート)%
			SIF GETBIT(FLAG:カスタムゲーム화면,1)
				PRINTFORM %" ",21%
		ELSEIF CFLAG:(FLAG:LOCALS):입력行動 > -1 && !GROUPMATCH(GET_STATE(CFLAG:(FLAG:LOCALS):ステート), "CHARM", "PANIC", "ORGY")
			CALLFORM SKILL_NAME_{CFLAG:(FLAG:LOCALS):입력行動},FLAG:LOCALS
			IF GETBIT(FLAG:カスタムゲーム화면,1)
				PRINTBUTTON RESULTS + " " * MAX(0, (39 - STRLENS(RESULTS))),LOCAL
			ELSE
				PRINTBUTTON RESULTS + " " * MAX(0, (18 - STRLENS(RESULTS))),LOCAL
			ENDIF
			;ＣＨＡＮＧＥ
			IF CFLAG:(FLAG:LOCALS):입력行動 == 2301
				TARGETS =  >>> [{CFLAG:(FLAG:LOCALS):ターゲット,2}] \@(POS(CFLAG:(FLAG:LOCALS):ターゲット) > -1) ? %CALLNAME:POS(CFLAG:(FLAG:LOCALS):ターゲット)% # ＥＭＰＴＹ \@
			;RETURN
			ELSEIF CFLAG:(FLAG:LOCALS):입력行動 == 2302
			;SUMMON
			ELSEIF CFLAG:(FLAG:LOCALS):입력行動 == 2303 || CFLAG:(FLAG:LOCALS):입력行動 == 529 || CFLAG:(FLAG:LOCALS):입력行動 == 540
				;---- EDIT 004 MOD START -------------------------
				;PRINTFORML→PRINTFORM
				TARGETS =  >>> [{CFLAG:(FLAG:LOCALS):ターゲット,2}] %CALLNAME:(CFLAG:(FLAG:LOCALS):소환予定キャラ)%
				;---- EDIT 004 MOD END   -------------------------
			;東方ＭＯＤ추가-------------------------------------
			;---- EDIT 025 ADD START
			ELSEIF CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:스리스티]]
				TARGETS =  >>> [--] 아군전체
			;---- EDIT 025 ADD END
			;1체蘇生 도반옥・반혼향・리캄・사마리캄・トンリン芳香
			ELSEIF CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:리캄]] || CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:사마리캄]] || CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:도반옥]] || CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:반혼향]] || CFLAG:(FLAG:LOCALS):입력行動 == [[스킬:통령「통령요시카」]]
				;現ターゲットが蘇生대상か見る
				CALL CHECK_TARGET_RESUSCITATION, FLAG:LOCALS
				IF RESULT > -1 
				;IF CFLAG:(CFLAG:(FLAG:LOCALS):ターゲット):포지션 >= 1 && CFLAG:(CFLAG:(FLAG:LOCALS):ターゲット):포지션 <= 6
					;TARGETS =  >>> [{CFLAG:(CFLAG:(FLAG:LOCALS):ターゲット):포지션,2}] %CALLNAME:(CFLAG:(FLAG:LOCALS):ターゲット)%
					CFLAG:(FLAG:LOCALS):ターゲット = RESULT
					TARGETS =  >>> [--] %CALLNAME:(CFLAG:(FLAG:LOCALS):ターゲット)%
				ELSE
					;대상キャラが전투참가していない場合
					;TARGETS =  >>> [--] %CALLNAME:(CFLAG:(FLAG:LOCALS):ターゲット)%
					CFLAG:(FLAG:LOCALS):방어フラグ = 1
					GOTO YARINAOSI
				ENDIF
				TARGET_ABLE:LOCAL = 1
			;東方ＭＯＤ추가ここまで-------------------------------------
			;1체
			ELSEIF CFLAG:(FLAG:LOCALS):ターゲット <= 16 && CFLAG:(FLAG:LOCALS):ターゲット > 0
				;記録されている포지션に적がいない場合
				IF POS(CFLAG:(FLAG:LOCALS):ターゲット) == -1
					CALL CHECK_ACTIONABLE, FLAG:LOCALS, CFLAG:(FLAG:LOCALS):입력行動
					IF RESULT == 0
						CFLAG:(FLAG:LOCALS):방어フラグ = 1
						GOTO YARINAOSI
					ELSE
						CALL RANDOM_TARGET, FLAG:LOCALS, CFLAG:(FLAG:LOCALS):입력行動
					ENDIF
				ENDIF
				TARGETS =  >>> [{CFLAG:(FLAG:LOCALS):ターゲット,2}] %CALLNAME:POS(CFLAG:(FLAG:LOCALS):ターゲット)%
				LOCALS = 포지션{CFLAG:(FLAG:LOCALS):ターゲット}
				TARGET_ABLE:LOCAL = 1
			;列
			ELSEIF CFLAG:(FLAG:LOCALS):ターゲット == 20 || CFLAG:(FLAG:LOCALS):ターゲット == 21
				TARGETS =  >>> [--] \@CFLAG:(FLAG:LOCALS):ターゲット == 20 ? 적前列 # 적後列 \@
				CALLFORM SKILL_TARGET_{CFLAG:(FLAG:LOCALS):입력行動}
				IF RESULT == 1
					CALLFORM SKILL_SPHERE_{CFLAG:(FLAG:LOCALS):입력行動},(FLAG:LOCALS)
					IF RESULT == 2
						CALLFORM SKILL_RANGE_{CFLAG:(FLAG:LOCALS):입력行動},(FLAG:LOCALS)
						;前列のみ공격可能な스킬で後列を選択できない様に변경
						;IF (RESULT == 2 && LOCAL < 4) || RESULT > 2
						IF RESULT > 2
							IF CHECK_BACKROW()
								TARGET_ABLE:LOCAL = 1
							ENDIF
							
						ENDIF
					ENDIF
				ENDIF
			;그외
			ELSE
				CALLFORM SKILL_TARGET_{CFLAG:(FLAG:LOCALS):입력行動}
				IF RESULT == 1
					TARGETS =  >>> [--] 적전체
				ELSEIF RESULT == 2
					TARGETS =  >>> [--] 아군전체
				ELSEIF RESULT == 3
					TARGETS =  >>> [--] 전체
				ELSE
					TARGETS =  　　　　　　　　　
				ENDIF
			ENDIF
		ENDIF
		;自分が行動できるかどうか
		CALL INPUTABLE_CHARA, POS(LOCAL)
		;CALL INPUTABLE_CHARA, FLAG:LOCALS
		IF RESULT
			IF !TARGET_ABLE:LOCAL
				PRINTPLAINFORM %TARGETS,26,LEFT%　
				SETCOLOR COLOR("gray")
				PRINTFORM [/{LOCAL}]TARGET
				RESETCOLOR
			ELSE
				PRINTBUTTON @"%TARGETS, 26, LEFT%", UNICODE(LOCAL + 1000)
				PRINT 　
				PRINTBUTTON "[/" + TOSTR(LOCAL) + "]TARGET", UNICODE(LOCAL + 1000)
			ENDIF
		ELSE
			PRINTFORM %"　",36,LEFT%
			PRINT 　
		ENDIF
		;自分が行動できるかどうか
		CALL INPUTABLE_CHARA, POS(LOCAL)
		IF RESULT
			PRINT 　
			PRINTBUTTON "[*" + TOSTR(LOCAL) + "]ATTACK", UNICODE(LOCAL + 2000)
			PRINT 　
			PRINTBUTTON "[-" + TOSTR(LOCAL) + "]GUARD", UNICODE(LOCAL + 3000)
			RESETCOLOR

;---- EDIT 023 ADD START ---------------------------
			IF FLAG:ムフフ전개 && EQUIP:MASTER:엑스링케이지
				IF CFLAG:POS(LOCAL):던전内発情用욕정치 >= 10000
					IF BASE:POS(LOCAL):체력 <= 100 || BASE:POS(LOCAL):기력 <= 100
						SETCOLOR COLOR("red")
						PRINT 　[+
						PRINTFORM {LOCAL}]ECSLINK
					ELSE
						PRINT 　
						SETCOLOR COLOR("pink")
						PRINTBUTTON "[+" + TOSTR(LOCAL) + "]ECSLINK", UNICODE(LOCAL + 4000)
					ENDIF
				ELSE
					SETCOLOR COLOR("gray")
					PRINT 　[+
					PRINTFORM {LOCAL}]ECSLINK
				ENDIF
			ENDIF
;---- EDIT 023 ADD END -----------------------------
			RESETCOLOR

		ELSE
			PRINT 　　　　　　
			PRINT 　　　　　 
		ENDIF
		IF CFLAG:POS(LOCAL):기합フラグ
			SETCOLOR COLOR("PASTEL-GREEN")
			PRINT  気
			RESETCOLOR
		ELSE
			PRINT  　
		ENDIF
		IF CFLAG:POS(LOCAL):集中フラグ
			SETCOLOR COLOR("PASTEL-GREEN")
			PRINT  集
			RESETCOLOR
		ELSE
			PRINT  　
		ENDIF
		IF CFLAG:POS(LOCAL):베어내기フラグ
			SETCOLOR COLOR("PASTEL-GREEN")
			PRINT  切
			RESETCOLOR
		ELSE
			PRINT  　
		ENDIF
	ELSE
		SETCOLOR COLOR("gray")
		PRINTFORM [{LOCAL}] ＥＭＰＴＹ
	ENDIF
	PRINTL
	RESETCOLOR
NEXT
PRINTL
DRAWLINE
PRINTL
PRINTL [0] ＧＯ  [9]ＣＡＮＣＥＬ
LINE = LINECOUNT
$INPUT_LOOP
;---- EDIT FPS操作時전투コマンド対応キー변경(2011/02/13) MOD START ----
;CALL DOUBLEINPUT(-100, "/", -101, "*", -102, "-",0," ")
;---- EDIT FPS操作時전투コマンド対応キー변경(2011/02/13) MOD END ------
CLEARLINE LINECOUNT - LINE
ONEINPUTS
ENCODETOUNI %RESULTS%
IF RESULTS == "0"
	FOR LOCAL,1,7
		LOCALS = 포지션{LOCAL}
		IF FLAG:LOCALS > -1
			;ＣＨＡＮＧＥ대상フラグ立ってる人に방어フラグ
			CALL INPUTABLE_CHARA,FLAG:LOCALS
			IF RESULT == 1 && CFLAG:(FLAG:LOCALS):ＣＨＡＮＧＥ대상フラグ == 1
				CFLAG:(FLAG:LOCALS):방어フラグ = 1
			ENDIF
			;방어フラグ立ってる人の입력行動を -1 に
			IF CFLAG:(FLAG:LOCALS):방어フラグ
				CFLAG:(FLAG:LOCALS):입력行動 = -1
			ENDIF
			;링케이지참가자は입력行動が-1に
			IF CFLAG:(FLAG:LOCALS):링케이지참가
				CFLAG:(FLAG:LOCALS):입력行動 = -1
				CFLAG:(FLAG:LOCALS):방어フラグ = 0
			ENDIF
		ENDIF
	NEXT
	;コマンド입력終了
	RETURN 1
ELSEIF RANGE(RESULT:1, 1001, 1006) || RESULTS == "/"
	IF RESULTS == "/"
		ONEINPUT
		SIF !RANGE(RESULT, 1, 6)
			GOTO INPUT_LOOP
		LOCAL = RESULT
	ELSE
		LOCAL = RESULT:1 - 1000
	ENDIF
	IF POS(LOCAL) > -1
		IF CFLAG:POS(LOCAL):ターゲット == 20
			CALLFORM SKILL_TARGET_{CFLAG:POS(LOCAL):입력行動}
			IF RESULT == 1
				CALLFORM SKILL_SPHERE_{CFLAG:POS(LOCAL):입력行動},POS(LOCAL)
				IF RESULT == 2
					CALLFORM SKILL_RANGE_{CFLAG:POS(LOCAL):입력行動},POS(LOCAL)
					IF (RESULT == 2 && LOCAL < 4) || RESULT > 2
						IF CHECK_BACKROW()
							CFLAG:POS(LOCAL):ターゲット = 21
						ENDIF
						
					ENDIF
				ENDIF
			ENDIF
		ELSEIF CFLAG:POS(LOCAL):ターゲット == 21
			CFLAG:POS(LOCAL):ターゲット = 20
		ELSEIF RANGE(CFLAG:POS(LOCAL):ターゲット, 1, 16)
			CALL INPUTABLE_CHARA,POS(LOCAL)
			SIF RESULT == 0
				GOTO INPUT_LOOP
			;GURADとかの時は弾く
			SIF CFLAG:POS(LOCAL):방어フラグ == 1
				GOTO INPUT_LOOP
			SIF LOCAL:(LOCAL+10) == -1
				GOTO INPUT_LOOP
			$SELECT_TARGET
			CALL SELECT_SKILL_TARGET,LOCAL:(LOCAL+10),POS(LOCAL)
			;キャンセル対策しつつ、ありえない数字ははじいちゃう
			;SIF RESULT > 16 || RESULT < 1
			SIF RESULT == -1
				RESTART
			;대상が死んでて、蘇生스킬でないとき。（蘇生스킬はRESERVEで1が帰ってくるはずなんで、後半の조건から除外
			RESULT:1 = RESULT
			TRYCCALLFORM SKILL_T_RESERVE_{CFLAG:(POS(LOCAL)):입력行動}
				SIF RESULT == 0
					GOTO NO_RESERVE
				;CALLFORM SKILL_SPECIAL_TARGET_{CFLAG:POS(LOCAL):입력行動},CFLAG:POS(LOCAL):ターゲット
				;SIF RESULT == 0
				;	RESTART
			CATCH
				$NO_RESERVE
				SIF GET_STATE(CFLAG:POS(RESULT:1):ステート) == "DYING"
					GOTO SELECT_TARGET
			ENDCATCH
			CFLAG:POS(LOCAL):ターゲット = RESULT:1
			CFLAG:POS(LOCAL):ＲＥＰＥＡＴターゲット = RESULT:1
		ELSE
			GOTO INPUT_LOOP
		ENDIF
	ELSE
		GOTO INPUT_LOOP
	ENDIF
	RESTART
ELSEIF RANGE(RESULT:1, 2001, 2006) || RESULTS == "*"
	IF RESULTS == "*"
		ONEINPUT
		SIF RESULT < 1 || RESULT > 6
			GOTO INPUT_LOOP
		LOCAL = RESULT
	ELSE
		LOCAL = RESULT:1 - 2000
	ENDIF
	IF POS(LOCAL) >= 0
		SIF CFLAG:POS(LOCAL):링케이지참가 == 1
			GOTO INPUT_LOOP
		CLEARLINE LINECOUNT - LINE
		;IF CFLAG:POS(LOCAL):ターゲット >= 7 && CFLAG:POS(LOCAL):ターゲット <= 11
		;	CFLAG:POS(LOCAL):입력行動 = 0
		;ELSE
			CALLFORM INPUT_COM_0, POS(LOCAL)
		;ENDIF
		SIF RESULT == -1 || RESULT == 0
			RESTART
		CFLAG:POS(LOCAL):방어フラグ = 0
		IF CFLAG:POS(LOCAL):링케이지발동 == 1
			FOR LCOUNT,1,6
				IF CFLAG:POS(LOCAL):("링케이지참가자" + TOSTR(LCOUNT)) > -1
					CFLAG:(CFLAG:POS(LOCAL):("링케이지참가자" + TOSTR(LCOUNT))):링케이지참가 = 0
				ENDIF
			NEXT
			CFLAG:POS(LOCAL):링케이지발동 = 0
		ENDIF
	ENDIF
	RESTART
ELSEIF RANGE(RESULT:1, 3001, 3006) || RESULTS == "-"
	IF RESULTS == "-"
		ONEINPUT
		SIF RESULT < 1 || RESULT > 6
			GOTO INPUT_LOOP
		LOCAL = RESULT
	ELSE
		LOCAL = RESULT:1 - 3000
	ENDIF
	;ＧＵＡＲＤ
	IF POS(LOCAL) >= 0
		SIF CFLAG:POS(LOCAL):링케이지참가 == 1
			GOTO INPUT_LOOP
		CFLAG:POS(LOCAL):ＲＥＰＥＡＴ行動 = -1
		CFLAG:POS(LOCAL):방어フラグ = 1
		IF CFLAG:POS(LOCAL):링케이지발동 == 1
			FOR LCOUNT,1,6
				IF CFLAG:POS(LOCAL):("링케이지참가자" + TOSTR(LCOUNT)) > -1
					CFLAG:(CFLAG:POS(LOCAL):("링케이지참가자" + TOSTR(LCOUNT))):링케이지참가 = 0
				ENDIF
			NEXT
			CFLAG:POS(LOCAL):링케이지발동 = 0
		ENDIF
	ENDIF
	RESTART
;---- EDIT 023 ADD START ---------------------------
ELSEIF RANGE(RESULT:1, 4001, 4006) || RESULTS == "+"
	SIF !(FLAG:ムフフ전개) || !(EQUIP:MASTER:엑스링케이지)
		RESTART

	IF RESULTS == "+"
		ONEINPUT
		SIF !RANGE(RESULT, 1, 6)
			GOTO INPUT_LOOP
		LOCAL = RESULT
	ELSE
		LOCAL = RESULT:1 - 4000
	ENDIF
	SIF RESULT:1 < 0
		RESTART

	IF POS(LOCAL) >= 0
		SIF CFLAG:POS(LOCAL):던전内発情用욕정치 < 10000 || BASE:(FLAG:LOCALS):체력 <= 100 || BASE:(FLAG:LOCALS):기력 <= 100
			RESTART

		CALLFORM INPUT_COM_19,POS(LOCAL)
	ENDIF
	RESTART

;---- EDIT 023 ADD END ---------------------------
ELSEIF RESULTS == "9"
	RETURN 0
ENDIF
;不正な입력は送り返す
;---- EDIT 023 ADD START ---------------------------
;디버그용
IF FLAG:DEBUG
	IF RESULTS == "$"
		FOR LCOUNT,1,7
			SIF POS(LCOUNT) > -1
				CFLAG:POS(LCOUNT):던전内発情用욕정치 = 10001
		NEXT
		
		RESTART
	ENDIF
ENDIF

;---- EDIT 023 ADD END ---------------------------

SIF !GROUPMATCH(RESULTS, "1", "2", "3", "4", "5", "6")
	GOTO INPUT_LOOP
LOCAL = TOINT(RESULTS)
;キャラ不在なら返す
SIF POS(LOCAL) == -1
