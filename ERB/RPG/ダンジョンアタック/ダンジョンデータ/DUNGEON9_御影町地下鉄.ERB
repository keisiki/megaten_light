			CASE 4
				CALL SHOW_FORCEMOVE, "DLLU", "D", , , "돌연 바닥이 움직이기 시작했다！"
		ENDSELECT
	ELSE
		CALL SHOW_FORCEMOVE, "LU<3>L<2>UL<3>", "D", , , "돌연 바닥이 움직이기 시작했다！"
	ENDIF
	RETURN 1
;=======
;階段
;=======
