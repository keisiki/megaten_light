@ACTION_283,ARG,ARG:1
#LOCALSIZE 2
#LOCALSSIZE 2
CFLAG:ARG:방어반감フラグ = 1
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
IF (MAXBASE:LOCAL:타격 < 100 || MAXBASE:LOCAL:타격 == 999) && CFLAG:LOCAL:타격가드킬 < 1 
		CFLAG:LOCAL:타격가드킬 = 1
		A = 1
	ENDIF

IF CFLAG:LOCAL:물리반사フラグ == 1
		B = CFLAG:LOCAL:물리반사フラグ
		CFLAG:LOCAL:물리반사フラグ = 0
	ENDIF

IF CFLAG:LOCAL:검격무효화횟수 > 0
		C = CFLAG:LOCAL:타격무효화횟수
		CFLAG:LOCAL:타격무효화횟수 = 0
	ENDIF

IF A + B + C > 0
    ;PRINTFORML 	TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
ENDIF
CFLAG:ARG:마법효과강화 = MIN(64, CFLAG:ARG:마법효과강화 + 32)
CALL ATTACK_SINGLE,ARG,LOCAL,283
CFLAG:ARG:마법효과강화 = MAX(-64, CFLAG:ARG:마법효과강화 - 32)
CFLAG:ARG:방어반감フラグ = 0
SIF A == 1
     CFLAG:LOCAL:타격가드킬 = 0
SIF B > 0
     CFLAG:LOCAL:물리반사フラグ = B
SIF C > 0
     CFLAG:LOCAL:타격무효화횟수 = C

