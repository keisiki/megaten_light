@ACTION_4855,ARG,ARG:1
#LOCALSIZE 6

LOCAL:1 = MAXBASE:ARG:총공격
LOCAL:2 = MAXBASE:(CFLAG:ARG:링케이지참가자1):총공격
CALLFORM 최저공격횟수_{EQUIP:ARG:총}
LOCAL:5 = RESULT
CALLFORM 최대공격횟수_{EQUIP:ARG:총}
LOCAL:3 = RESULT
LOCAL:3 = (LOCAL:3 + LOCAL:5) * 100 / 2
IF LOCAL:3 < 101
	CALLFORM 공격범위_{EQUIP:ARG:총}
	IF RESULT > 2
		LOCAL:3 = 200
	ELSEIF RESULT == 2
		LOCAL:3 = 150
	ELSE
		LOCAL:3 = 100
	ENDIF
ENDIF
CALL DAMAGE_HENKOU, LOCAL:1, LOCAL:3
LOCAL = RESULT

CALLFORM 최저공격횟수_{EQUIP:(CFLAG:ARG:링케이지참가자1):총}
LOCAL:5 = RESULT
CALLFORM 최대공격횟수_{EQUIP:(CFLAG:ARG:링케이지참가자1):총}
LOCAL:4 = RESULT
LOCAL:4 = (LOCAL:4 + LOCAL:5) * 100 / 2
IF LOCAL:4 < 101
	CALLFORM 공격범위_{EQUIP:(CFLAG:ARG:링케이지참가자1):총}
	IF RESULT > 2
		LOCAL:4 = 200
	ELSEIF RESULT == 2
		LOCAL:4 = 150
	ELSE
		LOCAL:4 = 100
	ENDIF
ENDIF
CALL DAMAGE_HENKOU, LOCAL:2, LOCAL:4
LOCAL:4 = (MAXBASE:(CFLAG:ARG:링케이지참가자1):LV + 100) * 100 / (MAXBASE:ARG:LV + 100)
CALL DAMAGE_HENKOU, RESULT, LOCAL:4
LOCAL += RESULT

MAXBASE:ARG:총공격 = LOCAL
CALL GUN_SINGLE,ARG,POS(ARG:1),4855
MAXBASE:ARG:총공격 = LOCAL:1





