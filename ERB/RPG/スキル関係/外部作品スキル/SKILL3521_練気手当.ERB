@ACTION_3521,ARG,ARG:1
#LOCALSIZE 3
ARG:1 = ARG
IF BASE:ARG:LV >= 24
	CALL SKILL_CURE_STATE_3521,CFLAG:ARG:ステート
	IF RESULT == 1
		SIF GET_STATE(CFLAG:LOCAL:ステート) == "PANIC" || GET_STATE(CFLAG:LOCAL:ステート) == "CHARM"
			CFLAG:LOCAL:混乱매료리카バー = 1
		PRINTFORML 　　TARGET:[{ARG,2}] %CALLNAME:ARG,20,LEFT%　>>>>>>　상태회복！
		CFLAG:ARG:ステート = 0
		CFLAG:ARG:ステート経過ターン = 0
	ENDIF
ENDIF
CALL SKILL_POWER_3521
LOCAL:1 = RESULT
LOCAL:2 = LOCAL:1 * (MAXBASE:ARG:마법효과/4+(MAXBASE:ARG:마법위력 / 8+10)) /50
PRINTFORM 　　TARGET:[{CPOS(ARG),2}] %CALLNAME:(ARG),20,LEFT%　>>>>>>　
CALL 相性소질체크, ARG, 4, 0
SIF RESULT == 1
	LOCAL:2 = LOCAL:2 * 2
SIF CFLAG:(ARG):ステート == GET_STATE_NUM("BRAND")
	LOCAL:2 = 1
SIF CFLAG:(ARG):회복不能フラグ
	LOCAL:2 = 0
PRINTFORML {LOCAL:2}회복
CALL VAR_HP,(ARG),LOCAL:2,3

