
;이벤트フラグ:10:0を参照する部分
;32個(CASE 31)まで作成可能
@EVENT_10_PLAYABLE_0(ARG)
SELECTCASE ARG

CASE 1 ; 雰囲気の違う발使い達1
	
	;치에ちゃんと게일がいる事
	SIF EVENT_10_2人掛け合い체크([[キャラ:치에]],[[キャラ:게일]])
		RETURN 1
	
CASE 2 ; 雰囲気の違う발使い達2
	
	;雰囲気の違う발使い達を見ている
	SIF !GETBIT(이벤트フラグ:10:0,1)
		RETURN 0
	;치에ちゃんと게일がいて二人の絆(互いへの호감도+忠誠)が一定値以上
	SIF !EVENT_10_2人掛け合い체크([[キャラ:치에]],[[キャラ:게일]],2500)
		RETURN 0
	;両者の忠誠値が700以上
	SIF BASE:GETCHARA([[キャラ:치에]]):충성도 < 700
		RETURN 0
	SIF BASE:GETCHARA([[キャラ:게일]]):충성도 < 700
		RETURN 0
	RETURN 1
	
