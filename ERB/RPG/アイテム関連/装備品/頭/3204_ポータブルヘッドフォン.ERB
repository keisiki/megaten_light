@전투능력수정_3204,ARG,ARG:1 = -1
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		SIF ARG:1 == -1
			RETURN 2
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
				LOCAL = BASE:(ARG:1):LV / 4
			ELSE
				LOCAL = BASE:(ARG:1):LV / 6
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 2
		ENDIF
	CASE "회피"
		SIF ARG:1 == -1
			RETURN 2
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
				LOCAL = BASE:(ARG:1):LV / 4
			ELSE
				LOCAL = BASE:(ARG:1):LV / 6
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 2
		ENDIF
	CASE "마법위력"
		SIF ARG:1 == -1
			RETURN 5
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
				LOCAL = BASE:(ARG:1):LV / 6
			ELSE
				LOCAL = BASE:(ARG:1):LV / 3
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
	CASE "마법효과"
		SIF ARG:1 == -1
			RETURN 5
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
				LOCAL = BASE:(ARG:1):LV / 6
			ELSE
				LOCAL = BASE:(ARG:1):LV / 3
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
ENDSELECT
RETURN 0

