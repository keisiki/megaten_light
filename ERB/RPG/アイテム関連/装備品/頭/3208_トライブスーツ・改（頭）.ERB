@전투능력수정_3208,ARG,ARG:1 = -1
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		SIF ARG:1 == -1
			RETURN 4
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):인내력 + (BASE:(ARG:1):힘 + BASE:(ARG:1):인내력 * 2) / 2) / 5
	CASE "회피"
		SIF ARG:1 == -1
			RETURN 2
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):속도 * 3/2 + BASE:(ARG:1):운 / 2) * 3/20
	CASE "마법위력"
		SIF ARG:1 == -1
			RETURN 3
		RETURN (BASE:(ARG:1):LV * 3/2 + BASE:(ARG:1):마력 * 3/2 + BASE:(ARG:1):지혜) / 20
	CASE "마법효과"
		SIF ARG:1 == -1
			RETURN 3
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):지혜 / 2 + BASE:(ARG:1):속도 / 2 + BASE:(ARG:1):운 / 2) / 4
ENDSELECT
RETURN 0

