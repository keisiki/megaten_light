	CASE 3
		SIF ARG:1 == -1
			RETURN 6
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):속도 * 3/2 + BASE:(ARG:1):운 / 2) * 2/5
	CASE 4
		SIF ARG:1 == -1
			RETURN 1
		RETURN (BASE:(ARG:1):LV * 3/2 + BASE:(ARG:1):마력 * 3/2 + BASE:(ARG:1):지혜) / 20
