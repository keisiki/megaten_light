@전투능력수정_3599,ARG,ARG:1 = -1
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		SIF ARG:1 == -1
			RETURN 9
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):인내력 + (BASE:(ARG:1):힘 + BASE:(ARG:1):인내력 * 2) / 2)
	CASE "회피"
		SIF ARG:1 == -1
			RETURN 4
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):속도 * 3/2 + BASE:(ARG:1):운 / 2)
	CASE "마법효과"
		SIF ARG:1 == -1
			RETURN 1
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):지혜 / 2 + BASE:(ARG:1):속도 / 2 + BASE:(ARG:1):운 / 2) / 2
ENDSELECT
RETURN 0

