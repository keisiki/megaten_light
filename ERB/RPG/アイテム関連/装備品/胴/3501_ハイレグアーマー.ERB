@전투능력수정_3501,ARG,ARG:1 = -1
;장비내성・効果변경설정が有効
IF BATTLE_SETTING_IS_EQUIP_EFFECT() == 1
	SELECTCASE GET_BATTLESTATUS(ARG)
		CASE "방어"
			RETURN 14
		CASE "회피"
			IF ARG:1 > -1
				SELECTCASE ABL:(ARG:1):노출증
					CASE 0
						RETURN -7
					CASE 1
						RETURN 0
					CASE IS < 4
						RETURN 7
					CASEELSE
						RETURN 14
				ENDSELECT
			ELSE
				RETURN 8
			ENDIF
		CASE "마법효과"
			RETURN 3
	ENDSELECT
;장비내성・効果변경설정が무효(バニラ)
ELSE
	SELECTCASE ARG
		CASE 2
			RETURN 14
		CASE 3
			IF ARG:1 > -1
				SELECTCASE ABL:(ARG:1):노출증
					CASE 0
						RETURN -7
					CASE 1
						RETURN 0
					CASE IS < 4
						RETURN 7
					CASEELSE
						RETURN 14
				ENDSELECT
			ELSE
				RETURN 5
			ENDIF
		CASE 5
			RETURN 3
	ENDSELECT
ENDIF
RETURN 0

