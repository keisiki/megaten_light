@전투능력수정_3608,ARG,ARG:1 = -1

SELECTCASE GET_BATTLESTATUS(ARG)
    CASE "방어"
		SIF ARG:1 == -1
			RETURN 10
		IF EQUIP:(ARG:1):악세사리 == 5203
			LOCAL = BASE:(ARG:1):LV / 10 * 9
			RETURN LOCAL
		ELSE
			RETURN 10
		ENDIF
	CASE "회피"
		SIF ARG:1 == -1
			RETURN 5
		IF EQUIP:(ARG:1):악세사리 == 5203
			LOCAL = BASE:(ARG:1):LV / 10 * 4
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
	CASE "마법위력"
		SIF ARG:1 == -1
			RETURN 2
		IF EQUIP:(ARG:1):악세사리 == 5203
			LOCAL = BASE:(ARG:1):LV / 10 * 3
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
	CASE "마법효과"
		SIF ARG:1 == -1
			RETURN 2
		IF EQUIP:(ARG:1):악세사리 == 5203
			LOCAL = BASE:(ARG:1):LV / 10 * 3
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
ENDSELECT
RETURN 0

