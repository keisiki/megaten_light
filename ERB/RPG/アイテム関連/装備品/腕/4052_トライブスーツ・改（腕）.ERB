@전투능력수정_4052,ARG,ARG:1 = -1
SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 6
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):인내력 + (BASE:(ARG:1):힘 + BASE:(ARG:1):인내력 * 2) / 2) / 4
	CASE 3
		SIF ARG:1 == -1
			RETURN 2
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):속도 * 3/2 + BASE:(ARG:1):운 / 2) * 3/20
	CASE 4
		SIF ARG:1 == -1
			RETURN 1
		RETURN (BASE:(ARG:1):LV * 3/2 + BASE:(ARG:1):마력 * 3/2 + BASE:(ARG:1):지혜) / 20
	CASE 5
		SIF ARG:1 == -1
			RETURN 1
		RETURN (BASE:(ARG:1):LV + BASE:(ARG:1):지혜 / 2 + BASE:(ARG:1):속도 / 2 + BASE:(ARG:1):운 / 2) * 3/20
ENDSELECT
RETURN 0

