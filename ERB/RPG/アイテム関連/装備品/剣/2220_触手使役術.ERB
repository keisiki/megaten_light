@전투능력수정_2220,ARG,ARG:1 = -1
SELECTCASE ARG
	CASE 0
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN 44 + ABL:(ARG:1):23 * 4 + FLAG:촉수레벨
			ELSE
				RETURN 44 + (ABL:(ARG:1):23 * 4 + ((FLAG:촉수레벨) / 4))
			ENDIF
		ELSE
			RETURN 44
		ENDIF
	CASE 1
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN 22 + (ABL:(ARG:1):23 * 2 + ((FLAG:촉수레벨) / 2))
			ELSE
				RETURN 22 + (ABL:(ARG:1):23 * 2 + ((FLAG:촉수레벨) / 8))
			ENDIF
		ELSE
			RETURN 22
		ENDIF
	CASE 2
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN -4 + (ABL:(ARG:1):23 * 4 + ((FLAG:촉수레벨) / 8))
			ELSE
				RETURN -4
			ENDIF
		ELSE
			RETURN -4
		ENDIF
	CASE 3
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN -4 + (ABL:(ARG:1):23 * 2 + ((FLAG:촉수레벨) / 16))
			ELSE
				RETURN -4
			ENDIF
		ELSE
			RETURN -4
		ENDIF
	CASE 4
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN 4 + (ABL:(ARG:1):23 * 4 + ((FLAG:촉수레벨) / 2))
			ELSE
				RETURN 4 + (ABL:(ARG:1):23 * 4 + ((FLAG:촉수레벨) / 8))
			ENDIF
		ELSE
			RETURN 2
		ENDIF
	CASE 5
		IF ARG:1 > -1
			IF TEQUIP:(ARG:1):전신복 == 340 || TEQUIP:(ARG:1):전신속옷 == 722
				RETURN 2 + (ABL:(ARG:1):23 * 2 + ((FLAG:촉수레벨) / 4))
			ELSE
				RETURN 2 + (ABL:(ARG:1):23 * 2 + ((FLAG:촉수레벨) / 16))
			ENDIF
		ELSE
			RETURN 1
		ENDIF
ENDSELECT
RETURN 0

