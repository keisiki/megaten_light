;==========================================================
;MANAGEMENT_베개
; 베개での活動処理
;
;<引数>
;	ARG = 점포번호
;<사용変数>
;	속성変動値   = 各活動で変動した数値の保管
;	配置人数     = 베개に配置しているキャラの人数
;	최대参拝人数 = 現在の베개규모での최대参拝人数、최대値は베개に改装규모による
;	参拝人数     = 相손にする人数
;	베개규모     = 参拝人数と속성変動値の底上げに影響する
;	敬拝値       = [[점포:인기]]:ARG に収める数値をまとめて保管する
;<戻り値>
;	なし
;========================================================
@MANAGEMENT_베개, ARG
#DIM 속성変動値
#DIM 配置人数
#DIM 최대参拝人数
#DIM 参拝人数
#DIM 베개규모
#DIM 敬拝値
#DIM 입봉사횟수
#DIM Ｖ봉사횟수
#DIM Ａ봉사횟수


;베개の改装레벨を保存
베개규모 = 점포("규모", ARG)
;최대参拝人数の설정
SELECTCASE 베개규모
	CASE 1
		최대参拝人数 = 5
	CASE 2
		최대参拝人数 = 10
	CASE 3
		최대参拝人数 = 20
	CASE 4
		최대参拝人数 = 40
	CASE 5
		최대参拝人数 = 80
ENDSELECT

;配置されているキャラがいるか체크
LOCAL:1 = 0
FOR LOCAL, 0, CHARANUM
	;配置されていないキャラを弾く
	SIF CFLAG:LOCAL:노역フラグ != 10+ARG
		CONTINUE
	配置人数 += 1
NEXT
;誰も配置されていない場合は戻る
SIF 配置人数 == 0
	RETURN

;活動処理
;LOCAL = キャラ번호
;LOCAL:1 = 多목적に사용
FOR LOCAL, 0, CHARANUM
	;配置されていないキャラを弾く
	SIF CFLAG:LOCAL:노역フラグ != 10+ARG
		CONTINUE
	;초기化
	입봉사횟수 = 0
	Ｖ봉사횟수 = 0
	Ａ봉사횟수 = 0

	;봉사別処理
	SELECTCASE CFLAG:LOCAL:個別성적서비스
		;祈り
		CASE 1
			PRINTFORMW %조사처리(CALLNAME:LOCAL,"가")% 높으신 분들께 웃음을 팔고 다녔다
			;祈りでの변화は0～1(MAX0～4)
			속성変動値 = RAND:(2+베개규모/2)
			敬拝値 += 1
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 65
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
		;입봉사
		CASE 2
			;봉사する人数を決める
			参拝人数 = RAND:최대参拝人数
			;参拝人数が0の場合はお祈りをする
			IF 参拝人数 == 0
				PRINTFORMW 찾는 사람이 없었기 때문에, %조사처리(CALLNAME:LOCAL,"는")% 하루종일 푹 쉬었다.
				;祈りでの변화は0～1(MAX0～4)
				속성変動値 = RAND:(2+베개규모/2)
				敬拝値 += 1
				;이벤트구상
				T = TARGET
				TARGET = LOCAL
				TFLAG:13 = 65
				CALL KOJO_MESSAGE_EVENT
				TARGET = T
				GOTO SKIP_1
			ENDIF
			
			;베개の종류によって分ける
			SELECTCASE 점포("종류",ARG)
				;メシア베개
				CASE 99
					SELECTCASE RAND:(2+베개규모)
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 파티에 참석하여 {参拝人数}명의 높으신 분들의 페니스에 입으로 즐거움을 주었다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 파티에서 {参拝人数}명의 높으신 분들에게 입으로 봉사했다
					ENDSELECT

			ENDSELECT
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 66
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
			;취득경험計算
			TCVAR:LOCAL:획득펠라경험 = 参拝人数
			;TCVAR:LOCAL:획득봉사쾌락경험 = 参拝人数
			;혀놀림がある場合は정액경험にボーナス
			LOCAL:1 = 参拝人数
			SIF TALENT:LOCAL:혀놀림
				LOCAL:1 += 1 + LOCAL:1 / 2
			TCVAR:LOCAL:획득정액경험 = LOCAL:1
			;崇拝値は1+획득정액경험
			敬拝値 += 1 + TCVAR:LOCAL:획득정액경험
			;획득경험표시
			CALL SHOW_ADD_EXP, LOCAL
			
			;입봉사での변화は0～2(MAX0～7)
			속성変動値 = RAND:(3+베개규모)

		;性봉사
		CASE 3
			;봉사する人数を決める
			参拝人数 = RAND:최대参拝人数
			;参拝人数が0の場合はお祈りをする
			IF 参拝人数 == 0
				PRINTFORMW 찾는 사람이 없었기 때문에, %조사처리(CALLNAME:LOCAL,"는")% 하루종일 푹 쉬었다.
				;祈りでの변화は0～1(MAX0～4)
				속성変動値 = RAND:(2+베개규모/2)
				敬拝値 += 1
				;이벤트구상
				T = TARGET
				TARGET = LOCAL
				TFLAG:13 = 65
				CALL KOJO_MESSAGE_EVENT
				TARGET = T
				GOTO SKIP_1
			ENDIF
			
			;베개の종류によって分ける
			SELECTCASE 점포("종류",ARG)
				;メシア베개
				CASE 99
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 파티에 참석하여 {参拝人数}명의 높으신 분들의 페니스에 몸으로 영업했다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 파티에서 {参拝人数}명의 높으신 분들에게 몸으로 봉사했다
					ENDSELECT
			ENDSELECT
			
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 67
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
			;취득경험計算
			;とりあえず一人に付き一発にしておく
			FOR LOCAL:1, 0, 参拝人数
				SELECTCASE RAND:3
					CASE 1
						입봉사횟수 ++
					CASE 2
						Ｖ봉사횟수 ++
					CASEELSE
						Ａ봉사횟수 ++
				ENDSELECT
				
				;키스경험処理：適当に랜덤で
				SIF RAND:2 == 0
					TCVAR:LOCAL:획득키스경험 += 1
				
			NEXT
			TCVAR:LOCAL:획득펠라경험 += 입봉사횟수
			TCVAR:LOCAL:획득Ｖ경험 += Ｖ봉사횟수
			TCVAR:LOCAL:획득Ａ경험 += Ａ봉사횟수
			TCVAR:LOCAL:획득봉사쾌락경험 += Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득정액경험 += 입봉사횟수 + Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득성교경험 += Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득질사경험 += Ｖ봉사횟수
			敬拝値 += 1 + 입봉사횟수 + 2*(Ｖ봉사횟수 + Ａ봉사횟수)
			IF TALENT:LOCAL:혀놀림
				TCVAR:LOCAL:획득정액경험 += 입봉사횟수 / 2
				敬拝値 += 입봉사횟수 / 2
			ENDIF
			;획득경험표시
			CALL SHOW_ADD_EXP, LOCAL
			;체력の소비
			PRINTFORML 체력 - {参拝人数*10}
			BASE:LOCAL:체력 -= 参拝人数*10

			;임신用
			SIF CFLAG:LOCAL:자궁내피임결계 == 0
				CFLAG:LOCAL:信者の中出氏による임신판정 = TCVAR:LOCAL:획득질사경험*2

			;性봉사での변화は1～4(MAX1～9)
			속성変動値 = 1 + RAND:(4+베개규모)

	ENDSELECT
	$SKIP_1
	;数値が1이상なら속성値変動
;	IF LOCAL:1
;		;베개によって変動が変わる
;		SELECTCASE 점포("종류", ARG)
;			CASE 13
;				LOCAL:2 = 255
;			CASE 14
;				LOCAL:2 = 0
;			CASE 15
;				LOCAL:2 = 127
;		ENDSELECT
;		;キャラの속성値変動
;		CALL CHANGE_CHARA_LC, LOCAL, LOCAL:2, LOCAL:1
;		CALL SYNC_STATUS, LOCAL
;	ENDIF

	PRINTW
	DRAWLINE

NEXT
