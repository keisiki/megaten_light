	B = 30
	SIF EXP:1 >= EXPLV:4
		A = 100
ELSEIF ABL:5 == 3
	A = 5000
	B = 75
	SIF EXP:1 >= EXPLV:5
		A = 4000
ELSEIF ABL:5 == 4
	A = 15000
	B = 150
	SIF EXP:1 >= EXPLV:5
		A = 8000
ELSEIF ABL:5 == 5
	A = 30000
	B = 230
	SIF EXP:1 >= EXPLV:5
		A = 24000
