	A = 40000
	B = 270
ELSEIF ABL:5 == 7
	A = 50000
	B = 360
ELSEIF ABL:5 == 8
	A = 60000
	B = 420
ELSEIF ABL:5 == 9
	A = 70000
	B = 500
ENDIF

;음란
