;-------------------------------------------------
;가슴팍열기
;-------------------------------------------------
@CHECK_COM_ABLE221
;해제는 언제든 가능
;웃옷을 안입고 있으면 불가능
IF TEQUIP:옷 == 0 && TEQUIP:속옷（상） == 0 && TEQUIP:전신복 == 0 && TEQUIP:전신속옷 == 0 && TEQUIP:겉옷 == 0
	RETURN 0
;가슴 구조에 따라선 옷을 찢어버림 - 커맨드로 다시 입을 수 없음
ELSEIF TEQUIP:TARGET:가슴앞열림 == 1 && (TEQUIP:가슴구조 == 0 || TEQUIP:가슴구조 == 32 || TEQUIP:가슴구조 == 64)
	RETURN 0
ELSE
	RETURN 1
ENDIF

@COMNAME221,ARG
#LOCALSSIZE 1
IF TEQUIP:가슴앞열림 == 0
	IF TEQUIP:가슴구조 == 0 || TEQUIP:가슴구조 == 32 || TEQUIP:가슴구조 == 64
		RESULTS = 가슴팍 찢기
	ELSE
		RESULTS = 가슴팍 열기
	ENDIF
ELSE
	IF TEQUIP:가슴구조 == 0 || TEQUIP:가슴구조 == 32 || TEQUIP:가슴구조 == 64
		RETURN 0
	ELSE
		RESULTS = 가슴 가리기
	ENDIF
ENDIF

@ACT_COM221
#LOCALSSIZE 1
CALL COMNAME221
LOCALS = %RESULTS%
PRINTFORML %LOCALS%
;-------------------------------------------------
;実行決定
;-------------------------------------------------
TSTR:0 = %LOCALS%

;조교자→조교대상
TFLAG:28 = 2

;작업の処理
INVERTBIT TEQUIP:TARGET:가슴앞열림 , 0

TFLAG:13 = 44
CALL KOJO_MESSAGE_EVENT


CALL CHECK_EXPOSE(TARGET)
CALL 촉각체크(TARGET)

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 10

SOURCE:TARGET:달성 = 20
SOURCE:TARGET:무서움 = 120
SOURCE:TARGET:액체 = 10
SOURCE:TARGET:노출 = 300
SOURCE:TARGET:굴종 = 450
SOURCE:TARGET:일탈 = 150
SOURCE:TARGET:반감 = 150

;ビデオ
IF TEQUIP:28
	SOURCE:TARGET:액체 += 50
	SOURCE:TARGET:욕정 += 100
	SOURCE:TARGET:반감 += 200
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 150

;처녀、정조관념
IF TALENT:0
	TIMES SOURCE:TARGET:무서움 , 1.20
	TIMES SOURCE:TARGET:굴종 , 1.20
	TIMES SOURCE:TARGET:반감 , 1.20
	SOURCE:TARGET:노출 += 300
	IF TALENT:30
		TIMES SOURCE:TARGET:노출 , 2.00
		TIMES SOURCE:TARGET:일탈 , 2.00
	ENDIF
ENDIF

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;레즈경험

A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;의존도ベクトル
TFLAG:33 = 3

;의존도보정値(복종で1、예속で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

@MESSAGE_COM221

;===================================================
;조교타입
;===================================================
@COMTYPE_221
RETURN COMTYPE("특수커맨드계")

