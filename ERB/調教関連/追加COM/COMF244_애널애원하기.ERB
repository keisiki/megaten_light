@CHECK_COM_ABLE244
;조개젖히기実行판정
;순종が2未満だとダメ
SIF ABL:0 < 2
	RETURN 0

;처녀の場合、순종3以上または노출증3以上ないとダメ
SIF EXP:Ａ경험 == 0 && ABL:0 < 3 && ABL:8 < 3
	RETURN 0

SIF !USE_HAND(TARGET)
	RETURN 0

SIF !USE_ANUS(TARGET)
	RETURN 0

;목욕탕플레이中は플레이매트が無いとダメ
IF TEQUIP:31
	SIF !EXIST_ITEM(20)
		RETURN 0
ENDIF
;삼각목마騎乗中はダメ
SIF TEQUIP:41
	RETURN 0
RETURN 1


@ACT_COM244
PRINTL 애널애원하기
TSTR:0 = 애널애원하기

;조교대상→조교대상
TFLAG:28 = 4


;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:체력 += 5
DOWNBASE:기력 += 150

SOURCE:노출 = 1000
SOURCE:굴종 = 100
SOURCE:일탈 = 1000

;PALAM:욕정을 본다
IF PALAM:욕정 < PALAMLV:1
    LOCAL:1 = 100
ELSEIF PALAM:욕정 < PALAMLV:2
    LOCAL:1 = 120
ELSEIF PALAM:욕정 < PALAMLV:3
    LOCAL:1 = 160
ELSEIF PALAM:욕정 < PALAMLV:4
    LOCAL:1 = 220
ELSEIF PALAM:욕정 < PALAMLV:9
    LOCAL:1 = 300
ELSE
    LOCAL:1 = 400
ENDIF

;ABL:A감각을 본다
IF ABL:Ａ감각 == 0
    LOCAL:1 += 8
ELSEIF ABL:Ａ감각 == 1
    LOCAL:1 += 16
ELSEIF ABL:Ａ감각 == 2
    LOCAL:1 += 26
ELSEIF ABL:Ａ감각 == 3
    LOCAL:1 += 34
ELSEIF ABL:Ａ감각 == 4
    LOCAL:1 += 44
ELSE
    LOCAL:1 += 56
ENDIF



IF !IS_MALE(TARGET) && !IS_MALE(PLAYER)
    TCVAR:획득레즈경험 += 2
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER)
    TCVAR:획득ＢＬ경험 += 2
ENDIF

;ビデオ
IF TEQUIP:28
	SOURCE:TARGET:액체 += 50
	SOURCE:TARGET:욕정 += 100
	SOURCE:TARGET:반감 += 200
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------

SOURCE:욕정 += PALAM:욕정 / 5
SOURCE:굴종 += ABL:욕망 * ABL:노출증 * LOCAL:1

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    SOURCE:노출 += 1500
    SOURCE:일탈 += 3000
ELSEIF ABL:노출증 == 1
    SOURCE:액체 += (ABL:욕망 + ABL:노출증) * 10
    SOURCE:노출 += 1250
    SOURCE:일탈 += 1500
ELSEIF ABL:노출증 == 2
    SOURCE:액체 += (ABL:욕망 + ABL:노출증) * 20
    SOURCE:노출 += 1000
    SOURCE:일탈 += 800
ELSEIF ABL:노출증 == 3
    SOURCE:액체 += (ABL:욕망 + ABL:노출증) * 40
    SOURCE:노출 += 750
    SOURCE:일탈 += 400
ELSEIF ABL:노출증 == 4
    SOURCE:액체 += (ABL:욕망 + ABL:노출증) * 80
    SOURCE:노출 += 500
    SOURCE:일탈 += 200
ELSE
    SOURCE:액체 += (ABL:욕망 + ABL:노출증) * 140
    SOURCE:노출 += 250
    SOURCE:일탈 += 100
ENDIF

;-------------------------------------------------
;경험の処理
;-------------------------------------------------

A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;의존도ベクトル
TFLAG:33 = 3

;의존도보정値(복종で1、예속で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1
