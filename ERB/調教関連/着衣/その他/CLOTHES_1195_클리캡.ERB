
@CLOTHES_NAME_1195
RESULTS = 클리캡

;노출部位
@CLOTHES_EXPOSE_1195,ARG
;ARG = 노출する部位
;1 = 팔노출 2 = 발노출 3 = 다리노출 4 = 유방노출 5 = 유두노출 6 = ヘソ노출 7 = 음순노출 8 = 둔부노출


SELECTCASE ARG
	CASE 0
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;장비部位
@CLOTHES_PART_1195
RETURN 11

;옷の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_1195
RETURN 0

;가랑이の구조
;1 = 바지、2 = ビキニ타입、3 = 스커트、4 = 穴開き、5 앞열림、6 開閉가능
@CLOTHES_CROTCH_1195
RETURN 0

;장비時の조교効果
@CLOTHES_SOURCE_1195,ARG
IF FLAG:SHOPコマンド == 0
	SOURCE:ARG:쾌Ｃ += 125
	SOURCE:ARG:노출 += 10
	SOURCE:ARG:일탈 += 20

	;억압、저항持ちには、억울ソース추가
	SIF TALENT:ARG:억압 || TALENT:ARG:저항
		SOURCE:ARG:울굴 += 20
		
ENDIF

;장비時の경험추가
@CLOTHES_EXP_1195,ARG
IF FLAG:SHOPコマンド == 0
	SIF ARG == -1
		RETURN 0
ELSE

ENDIF


;장비するための조건 - 몰래 뗄 수 있는거라 좀 쎄게 잡아둠
@CLOTHES_PREREQUISITE_1195,ARG
SIF IS_MALE(ARG)
	RETURN 0
;클리피어스특성 이나 클리캡 장착시 클리캡 추가 장착 불가능
SIF TALENT:ARG:클리피어스
	RETURN 0
SIF (CFLAG:ARG:그외 == 1195 || CFLAG:ARG:그외2 == 1195 || CFLAG:ARG:그외3 == 1195 || CFLAG:ARG:그외4 == 1195 || CFLAG:ARG:그외5 == 1195 || CFLAG:ARG:그외6 == 1195)
	RETURN 0
SIF (CFLAG:ARG:그외 == 1199 || CFLAG:ARG:그외2 == 1199 || CFLAG:ARG:그외3 == 1199 || CFLAG:ARG:그외4 == 1199 || CFLAG:ARG:그외5 == 1199 || CFLAG:ARG:그외6 == 1199)
	RETURN 0
SIF ARG == MASTER
	RETURN 1
SIF ABL:ARG:순종 >= 5
	RETURN 1
SIF ABL:ARG:마조끼 >= 2
	RETURN 1
SIF MARK:ARG:굴복각인 >= 3
	RETURN 1
RETURN 0

@CLOTHES_PRICE_1195
RETURN 2000
