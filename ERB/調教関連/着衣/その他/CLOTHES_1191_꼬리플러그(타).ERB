
@CLOTHES_NAME_1191
RESULTS = 꼬리플러그(타)

;노출部位
@CLOTHES_EXPOSE_1191,ARG
;ARG = 노출する部位
;1 = 팔노출 2 = 발노출 3 = 다리노출 4 = 유방노출 5 = 유두노출 6 = ヘソ노출 7 = 음순노출 8 = 둔부노출


SELECTCASE ARG
	CASE 8
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;장비部位
@CLOTHES_PART_1191
RETURN 11

;옷の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_1191
RETURN 0

;가랑이の구조
;1 = 바지、2 = ビキニ타입、3 = 스커트、4 = 穴開き、5 앞열림、6 開閉가능
@CLOTHES_CROTCH_1191
RETURN 4

;장비時の조교効果
@CLOTHES_SOURCE_1191,ARG
IF FLAG:SHOPコマンド == 0
	SOURCE:ARG:쾌Ａ += 65
	SOURCE:ARG:아픔 += 100
	SOURCE:ARG:노출 += 50
	SOURCE:ARG:일탈 += 50
	SOURCE:ARG:반감 += 100

	;억압、저항持ちには、억울ソース추가
	SIF TALENT:ARG:억압 || TALENT:ARG:저항
		SOURCE:ARG:울굴 += 50
		
	;Vへの고통は先に処理しておく
	;EXP:ARG:Ｖ경험をみる（처녀はありえない）
	A = 100
	B = 40
	IF EXP:ARG:1 < EXPLV:1
		TIMES A , 3.00
		TIMES B , 3.00
	ELSEIF EXP:ARG:1 < EXPLV:2
		TIMES A , 1.20
		TIMES B , 2.00
	ELSEIF EXP:ARG:1 < EXPLV:3
		TIMES A , 0.80
		TIMES B , 1.50
	ELSEIF EXP:ARG:1 < EXPLV:4
		TIMES A , 0.60
		TIMES B , 1.20
	ELSEIF EXP:ARG:1 < EXPLV:5
		TIMES A , 0.40
	ELSEIF EXP:ARG:1 >= EXPLV:5
		TIMES A , 0.20
	ENDIF


	;PALAM:ARG:윤활をみる
	IF PALAM:ARG:4 < PALAMLV:1
		TIMES A , 1.20
		TIMES B , 2.00
	ELSEIF PALAM:ARG:4 < PALAMLV:2
		TIMES A , 1.00
		TIMES B , 1.50
	ELSEIF PALAM:ARG:4 < PALAMLV:3
		TIMES A , 0.60
	ELSEIF PALAM:ARG:4 < PALAMLV:4
		TIMES A , 0.30
	ELSEIF PALAM:ARG:4 >= PALAMLV:4
		TIMES A , 0.20
	ENDIF
	SOURCE:ARG:7 += A
	SOURCE:ARG:18 += B
	IF ARG == TARGET
		DOWNBASE:ARG:0 += 10
		DOWNBASE:ARG:1 += 90
	ENDIF
	
ELSE
ENDIF

;장비時の경험추가
@CLOTHES_EXP_1191,ARG
IF FLAG:SHOPコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <꼬리플러그삽입중>\@ ARG == MASTER ? (주인) #\@\@ ARG == ASSI ? (조수) #\@
	CALL ADDS_EXP("Ａ경험", 1, ARG)
ELSE

ENDIF



;장비するための조건
@CLOTHES_PREREQUISITE_1191,ARG
SIF ARG == MASTER
	RETURN 1
SIF EXP:ARG:Ａ경험 < 15 && ABL:ARG:Ａ감각 < 1
	RETURN 0
SIF TALENT:ARG:소인체형 && EXP:ARG:Ａ확장경험 < 1
	RETURN 0
SIF ABL:ARG:순종 >= 3
	RETURN 1
SIF ABL:ARG:마조끼 >= 2
	RETURN 1
SIF ABL:ARG:Ａ감각 >= 2
	RETURN 1
SIF ABL:ARG:노출증 >= 2
	RETURN 1
RETURN 0

@CLOTHES_PRICE_1191
RETURN 1500
