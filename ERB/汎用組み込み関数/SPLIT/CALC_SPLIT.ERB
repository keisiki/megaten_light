;
;@CHANGE_SPLIT
;ARGS   操作する文字列
;ARGS:1 ARGSを区切る文字列
;ARG 　 ARGSを区切った後で、操作する箇所
;ARGS:2 변경する
;================================================
@CALC_SPLIT(ARGS , ARGS:1 , ARG , ARGS:2 = "" , ARGS:3 = "" , ARGS:4)
#FUNCTIONS
#LOCALSSIZE 200
#LOCALSIZE 2
VARSET LOCALS , ""
SPLIT ARGS , ARGS:1 , LOCALS
IF ARGS:2 != ""
	LOCAL = FINDELEMENT(LOCALS , ARGS:2 , , , 0)
	;LOCAL が-1の場合、連続して二つ空いている箇所を探してそこにARGS:2を代入、数値を0として演算
	IF LOCAL == -1
		FOR LOCAL , 0 , 199
			IF LOCALS:LOCAL == "" && LOCALS:(LOCAL+ARG) == ""
				LOCALS:LOCAL = %ARGS:2%
				LOCAL --
				BREAK
			ENDIF
		NEXT
	ENDIF
	
	ARG += LOCAL
ENDIF
SELECTCASE ARGS:3
	CASE "+="
		IF ISNUMERIC(ARGS:4) == 1 && ISNUMERIC(LOCALS:ARG) == 1
			LOCALS:ARG = {TOINT(LOCALS:ARG) + TOINT(ARGS:4)}
		ELSE
			LOCALS:ARG += ARGS:4
		ENDIF
	CASE "-="
		LOCALS:ARG = {TOINT(LOCALS:ARG) - TOINT(ARGS:4)}
	CASE "*="
		LOCALS:ARG = {TOINT(LOCALS:ARG) * TOINT(ARGS:4)}
	CASE "/="
		LOCALS:ARG = {TOINT(LOCALS:ARG) / TOINT(ARGS:4)}
	CASE "=="
		LOCALS:ARG = %ARGS:4%
ENDSELECT
SIF TOINT(LOCALS:ARG) > 0
	LOCALS:ARG = +%LOCALS:ARG%
FOR LOCAL , 0 , 200
	SIF LOCALS:LOCAL != ""
		LOCAL:1 = LOCAL
NEXT
SIF LOCAL:1 == 0
	RETURNF LOCALS
FOR LOCAL , 1 , 200
	LOCALS += ARGS:1 + LOCALS:LOCAL
	SIF LOCAL == LOCAL:1
		BREAK
NEXT
RETURNF LOCALS






