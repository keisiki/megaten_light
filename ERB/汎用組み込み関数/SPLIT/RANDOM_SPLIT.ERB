;==========================================================
;@RANDOM_SPLIT
;文字列ARGSをARGS:1を区切りとしてSPLIT命令にかけ、
;랜덤に抽出した항목だけを選んでARGS:1で繋ぎ直す
;==========================================================
;ARGS   = 抽出元の文章
;ARGS:1 = 文の区切り
;ARG    = 抽出する항목の数
@RANDOM_SPLIT,ARGS,ARGS:1,ARG
#FUNCTIONS
#DIMS 결과, 1
#DIM 항목数,1
#LOCALSIZE 2
#LOCALSSIZE 10000
VARSET LOCAL
VARSET 항목数
DO
	LOCAL   = STRFIND(ARGS, ARGS:1, LOCAL) + 1
	항목数 += 1
LOOP LOCAL != 0
SIF ARG > 항목数
	ARG = 항목数
SPLIT ARGS, ARGS:1 ,LOCALS
VARSET 결과
FOR LOCAL,0,ARG
	LOCAL:1 = RAND(0,항목数)
	결과 = %결과%%LOCALS:(LOCAL:1)%
	SIF ARG-LOCAL > 1
		결과  = %결과%%ARGS:1%
	항목数 --
	ARRAYREMOVE LOCALS, LOCAL:1,1
NEXT
VARSET LOCALS
RETURNF 결과
