@SHOPCOMABLE_105
RESULT:1 = 2
IF FLAG:휴식확인フラグ == 2
	RESULTS = 아침까지 휴식
ELSE
	RESULTS = 휴식
ENDIF
RETURN 1

@SHOP_COM_105
IF !FLAG:휴식확인フラグ
	PRINTL 휴식합니까? 

	PRINT [0] 휴식한다
	PRINT [1] 아침까지 휴식한다
	SIF TIME < 2
		PRINT [2] 밤까지 휴식한다
	PRINTL [3] 휴식하지 않는다

	CALL INPUTINT(0, 1, 2 * (TIME < 2), 3)
	;CALL INPUT_YN,"Yes","No",2

	SELECTCASE RESULT
		CASE 0
			PRINTW 휴식했습니다
			;휴식フラグを立てる（ここは特別）
			FLAG:0 = 2
			BEGIN TURNEND
			RETURN 1
		CASE 1
			PRINTW 아침까지 휴식합니다
			FLAG:0 = 3
			BEGIN TURNEND
			RETURN 1
		CASE 2
			PRINTW 밤까지 휴식합니다
			TIME = 2
			FLAG:0 = 2
			BEGIN TURNEND
			RETURN 1
		CASE 3
			RETURN 0
	ENDSELECT
ELSE
	PRINTL 휴식했습니다
	;휴식フラグを立てる（ここは特別）
	IF FLAG:휴식확인フラグ == 2
		;朝まで휴식
		FLAG:0 = 3
	ELSE
		FLAG:0 = 2
	ENDIF
	BEGIN TURNEND
	RETURN 1
ENDIF
