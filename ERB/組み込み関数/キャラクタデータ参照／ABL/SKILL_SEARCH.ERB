	TRYCALLFORM SKILL_SPHERE_{ARG:2}
	LOCAL:0 = (ARGS:1 == "1명" && RESULT == 1) || (ARGS:1 == "１열" && RESULT == 2) || (ARGS:1 == "전체" && RESULT == 3)
