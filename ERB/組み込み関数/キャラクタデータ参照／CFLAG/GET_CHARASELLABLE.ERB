;-----------------------------
;매각가능かを取る関数
;ARG キャラ번호
;-----------------------------
@GET_CHARASELLABLE(ARG)
#FUNCTION
SIF ARG == MASTER
	RETURNF 0
SIF CFLAG:ARG:ボスフラグ
	RETURNF 0
SIF CFLAG:ARG:この場に居ないフラグ == 1
	RETURNF 0
;育児部屋に移動しているキャラは除外
SIF CHECK_CHILD_CARE(ARG) && FLAG:출산기능ONOFF == 1
	RETURNF 0
SIF CFLAG:ARG:노역フラグ == 3
	RETURNF 0
SIF CFLAG:ARG:매각가능 == 0
	RETURNF 0
SIF CFLAG:ARG:매각불가フラグ
	RETURNF 0
RETURNF 1
