;相性に合わせた色변경
;【急募】カラーコー디무ネイトのセンス
@SET_AISYOU_COLOR, ARG
SELECTCASE ARG
	CASE 999
		;반사
		LOCAL = GETNUM(FLAG, "반사칼라")
	CASE IS > 100
		;약점
		LOCAL = GETNUM(FLAG, "약점칼라")
	CASE 100
		;普通
		LOCAL = GETNUM(FLAG, "통상칼라")
	CASE IS > 0
		;내성
		LOCAL = GETNUM(FLAG, "내성칼라")
	CASE 0
		;무효
		LOCAL = GETNUM(FLAG, "무효칼라")
	CASEELSE
		;흡수
		LOCAL = GETNUM(FLAG, "흡수칼라")
ENDSELECT
CALL GETCOLOR_9(FLAG:LOCAL)
SETCOLOR RESULT, RESULT:1, RESULT:2
RETURN ARG
