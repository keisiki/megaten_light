PRINTL
CLEARLINE LINECOUNT
FOR LOCAL , 1 , 6000
	합계 = 0
	IF EXISTCSV(LOCAL , 0) > 0
		FOR LOCAL:1 , 1 , 7
			합계 += CSVBASE(LOCAL , GETNUM(BASE , "LV") + LOCAL:1 , 0)
		NEXT
		SIF 합계 > 18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2
			PRINTFORML [{LOCAL,4}] %CSVNAME(LOCAL,0)% LV{CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0)} 합계 = {합계} 초과　 + {합계 - (18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2)}
		SIF 합계 < 18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2
			PRINTFORML [{LOCAL,4}] %CSVNAME(LOCAL,0)% LV{CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0)} 합계 = {합계} 부족 - {(18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2) - 합계}
	ENDIF
NEXT


